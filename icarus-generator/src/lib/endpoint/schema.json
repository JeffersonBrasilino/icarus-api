{
  "$schema": "http://json-schema.org/schema",
  "$id": "SchematicsicarusEndpoint",
  "title": "opcoes gerador endpoint icarus",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "nome_tabela",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "qual o nome do endpoint?(nada de espacos, nome separados por -)"
    },
    "path": {
      "type": "string",
      "description": "path",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "qual o caminho do endpoint?(lembrando que tem que ser uma pasta com arquivo 'module') ex: administration/users"
    }
  },
  "required": ["name"]
}
