{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowJs": false,
    "paths": {
      "@infrastructure": ["./src/infrastructure"],
      "@infrastructure/*": ["./src/infrastructure/*"],
      "@applications": ["./src/applications"],
      "@applications/*": ["./src/applications/*"],
      "@core": ["./src/core"],
      "@core/*": ["./src/core/*"]
    }
  }
}
